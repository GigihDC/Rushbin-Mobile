<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_curve_2"
    tools:context=".TukarPoinActivity">

    <TextView
        android:id="@+id/txt_back_poin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="Tukar Poin"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/exo2_regular"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:drawableTint="@color/white"
        android:drawablePadding="20dp"
        android:clickable="true">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_poin"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text=""
                android:textStyle="bold"
                android:textSize="54sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poin saat ini"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:fontFamily="@font/exo2_semibold">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Kamu membutuhkan minimal 500 Poin untuk dapat menukarkan poin"
                android:textSize="18sp"
                android:textColor="@color/black">
            </TextView>
            <Button
                android:id="@+id/btn_tukar_poin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Request Tukar Poin"
                android:fontFamily="@font/exo2_semibold"
                android:background="@drawable/btn_cornerradius">
            </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>