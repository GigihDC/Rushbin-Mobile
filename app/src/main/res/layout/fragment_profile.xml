<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_curve_2"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="My Profile"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_semibold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_person_100"/>
        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/exo2_semibold"
            android:textColor="@color/black"
            android:text="Nama User"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/exo2_regular"
            android:textColor="@color/black"
            android:text="Email"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:text="Informasi Pengguna"
            android:fontFamily="@font/exo2_regular"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Telepon"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="30dp"/>
                <TextView
                    android:id="@+id/txt_telepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:text="08xxxxx"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="_________________________________________"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Alamat 1"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_outline_location_on_24"
                    android:drawablePadding="30dp"/>
                <TextView
                    android:id="@+id/txt_alamat_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:text="Jl. xxxxxx"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="_________________________________________"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Alamat 2"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_outline_location_on_24"
                    android:drawablePadding="30dp"/>
                <TextView
                    android:id="@+id/txt_alamat_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:text="Jl. xxxxxx"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="_________________________________________"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Alamat 3"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_outline_location_on_24"
                    android:drawablePadding="30dp"/>
                <TextView
                    android:id="@+id/txt_alamat_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:text="Jl. xxxxxx"
                    android:textSize="14sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="70dp"
            android:drawableLeft="@drawable/ic_twotone_drive_file_rename_outline_24"
            android:drawableTint="@color/white"
            android:background="@drawable/btn_cornerradius"
            android:text="Edit"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_semibold"/>
    </LinearLayout>

</ScrollView>