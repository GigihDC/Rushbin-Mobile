<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_curve_2"
    android:scrollbars="none"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_back_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_semibold"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/white"
            android:drawablePadding="20dp"
            android:clickable="true">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_person_100">
        </ImageView>
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:hint="Email"
            android:text="Email"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/costum_edittext"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp">
        </EditText>
        <EditText
            android:id="@+id/edit_nama"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:hint="Nama Lengkap"
            android:text="Nama Lengkap"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/costum_edittext"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp">
        </EditText>
        <EditText
            android:id="@+id/edit_tlp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:hint="Telepon"
            android:text="Telepon"
            android:textColor="@color/black"
            android:inputType="phone"
            android:background="@drawable/costum_edittext"
            android:drawableLeft="@drawable/ic_round_call_24"
            android:drawablePadding="10dp">
        </EditText>
        <EditText
            android:id="@+id/edit_alamat_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:hint="Alamat 1"
            android:text="Alamat 1"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/costum_edittext"
            android:drawableLeft="@drawable/ic_outline_location_on_24"
            android:drawablePadding="10dp">
        </EditText>
        <EditText
            android:id="@+id/edit_alamat_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:hint="Alamat 2"
            android:text="Alamat 2"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/costum_edittext"
            android:drawableLeft="@drawable/ic_outline_location_on_24"
            android:drawablePadding="10dp">
        </EditText>
        <EditText
            android:id="@+id/edit_alamat_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:hint="Alamat 3"
            android:text="Alamat 3"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/costum_edittext"
            android:drawableLeft="@drawable/ic_outline_location_on_24"
            android:drawablePadding="10dp">
        </EditText>
        <Button
            android:id="@+id/btn_edit_save"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:text="Save"
            android:fontFamily="@font/exo2_semibold"
            android:background="@drawable/btn_cornerradius"
            android:drawableRight="@drawable/ic_baseline_save_24"
            android:drawableTint="@color/white">
        </Button>
    </LinearLayout>

</ScrollView>