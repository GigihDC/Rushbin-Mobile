<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_curve_3"
    tools:context=".PickUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="Pick Up"
        android:fontFamily="@font/exo2_semibold"
        android:textSize="32sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_pickup_gambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Gambar"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/exo2_semibold">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/pickup_add_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/costum_edittext">
        </ImageView>
        <ImageView
            android:id="@+id/pickup_add_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/costum_edittext">
        </ImageView>
        <ImageView
            android:id="@+id/pickup_add_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/costum_edittext">
        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Alamat"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/exo2_semibold">
    </TextView>

    <Spinner
        android:id="@+id/alamat_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@drawable/costum_edittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Deskripsi"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/exo2_semibold">
    </TextView>

    <EditText
        android:id="@+id/pickup_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:background="@drawable/costum_edittext">
    </EditText>

    <Button
        android:id="@+id/pickup_send_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="Send"
        android:background="@drawable/btn_cornerradius"
        android:fontFamily="@font/exo2_semibold"
        android:textColor="@android:color/white"
        android:width="300dp"
        android:textSize="18sp"/>

</LinearLayout>